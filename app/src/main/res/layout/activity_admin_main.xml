                        <TextView
                            android:id="@+id/all_patients_count_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total:"
                            android:textColor="#6B617A" />
                    </LinearLayout>

                    <LinearLayout
